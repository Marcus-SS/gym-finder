<div class="container">
  <h1> Hello <%= current_user.name %>!</h1>
  <p><strong>My memberships</strong></p>
  <ul class="list-group">
    <% @memberships.each do |membership| %>
      <li class="list-group-item">
        <%= membership.gym.name %>
        <%= membership.start_date %>
        to <%= membership.end_date %>
      </li>
    <% end %>
  </ul>
  <br>

  <%= link_to 'Add your gym', new_gym_path %>
<div class="flexbox" style="display:flex">
    <div class="container">
  <!-- ... other parts of your container ... -->

  <div class="row">
    <% @gyms.each do |gym| %>
      <div class="col-md-4 mb-4 d-flex">
        <div class="card flex-fill">
          <%= link_to gym_path(gym) do %>
            <!-- Top half: Image -->
            <img src="<%= gym.preview %>" class="card-img-top" alt="<%= gym.name %>" style="width: 100%; height: 300px; object-fit: cover;">
          <% end %>
          <div class="card-body d-flex flex-column">
            <!-- Bottom half: Gym details -->
            <h5 class="card-title"><%= gym.name %></h5>
            <p class="card-text"><%= gym.description %></p>
            <p class="card-text">Average Rating: <%= gym.get_average_rating %></p>
            <div class="mt-auto">
              <%= link_to 'Delete Gym', delete_gym_path(gym), data: { turbo_method: :delete, remote: true, turbo_confirm: "Are you sure?"} %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

  </div>
